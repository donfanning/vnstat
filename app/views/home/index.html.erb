
<div class="row-fluid span12">
  <div class="span4">
    <h1 class="current-usage"><%= current_usage @vnstats[:oneline]%></h1>
    <p><small>current usage <%= "for " + AVAILABLE_DEVICES[@device.to_sym] if AVAILABLE_DEVICES.has_key?(@device.to_sym) %></small></p>
  </div>
  <div class="span4">
    <%= days_usage @vnstats[:oneline] %>
  </div>
  <div class="span4">
    <%= estimated_usage @vnstats %>
  </div>
</div>
<div class="row-fluid span12">
  <% if AVAILABLE_DEVICES.size > 1 %>
    <div class="btn-group span12">
      <% AVAILABLE_DEVICES.each do |k, v| %>
        <%= link_to v, root_path(dev: k), class: "btn btn-mini btn-default" %>
      <% end %>
    </div>
  <% end %>
</div>

<!-- daily use graph -->
<div class="row-fluid">
  <div class="well">
    <%= chart_tag 'daily_use', { dev: @device } %>
  </div>
</div>

<!-- monthly use graph -->
<div class="row-fluid">
  <div class="well">
    <%= chart_tag 'monthly_use', { dev: @device } %>
  </div>
</div>

<!-- details -->
<%= daily_history @vnstats[:days] %>

<%= monthly_history @vnstats[:months] %>
